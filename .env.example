# Example env template â€” DO NOT commit secrets here
# Copy this to `.env` and fill values for local development.

# Preferred: full Postgres connection string
SUPABASE_URL=postgresql://postgres:<PASSWORD>@<HOST>:5432/<DB>

# Optional: individual DB_* vars (used if SUPABASE_URL/POSTGRES_URL not set)
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_HOST=localhost
DB_PORT=5432
DB_NAME=care_matching

# Supabase keys (for apps)
SUPABASE_PROJECT_URL=https://<your-project>.supabase.co
SUPABASE_ANON_KEY=<anon-key>
SUPABASE_SERVICE_ROLE_KEY=<service-role-key> # server only

# Development-only: allow insecure TLS for self-signed certs
# Set to 'true' only on trusted developer machines
DEV_ALLOW_INSECURE_TLS=false
# Database Configuration
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=care_matching

# Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your-secret-key-change-this-in-production

# Client Configuration
CLIENT_URL=http://localhost:5173
