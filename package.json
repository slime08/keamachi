{
  "name": "care-matching-app",
  "version": "1.0.0",
  "description": "福祉関係の事業所と利用者向けマッチングアプリ",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "node --import=tsx server/index.ts",
    "client:dev": "cd client && vite",
    "build": "cd client && vite build",
    "preview": "cd client && vite preview",
    "start": "node server/index.js",
    "db:migrate": "node server/migrations/run.js"
  },
  "keywords": [
    "matching",
    "welfare",
    "care",
    "福祉"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.10.0",
    "socket.io": "^4.7.1",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/node": "^20.9.0",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1",
    "tsx": "^4.6.2"
  }
}
